// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "show_edit_predictions": false,
    "edit_predictions": {
        "provider": "none",
    },
    "agent": {
        "default_profile": "ask",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-5.1-codex",
        },
        "favorite_models": [],
        "model_parameters": [],
    },
    "toolbar": {
        "quick_actions": false,
        "agent_review": false,
        "code_actions": false,
        "breadcrumbs": true,
        "selections_menu": false,
    },
    "tabs": {
        "git_status": true,
    },
    "session": { "trust_all_worktrees": true },
    "title_bar": {
        "show_sign_in": true,
        "show_branch_icon": false,
        "show_branch_name": false,
        "show_menus": false,
        "show_onboarding_banner": false,
        "show_project_items": false,
        "show_user_menu": true,
        "show_user_picture": true,
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false,
    },
    "vim": {
        "use_system_clipboard": "on_yank",
    },
    "vim_mode": false,
    "disable_ai": false,
    // "autosave": { "after_delay": { "milliseconds": 60000 } },
    "auto_install_extensions": { "html": true },
    "allow_rewrap": "anywhere",
    "bottom_dock_layout": "contained",
    "icon_theme": "Material Icon Theme",
    "ui_font_size": 16,
    "buffer_font_size": 14,
    "theme": {
        "mode": "dark",
        "light": "GitHub Light High Contrast",
        "dark": "Aura Dark",
    },
    "theme_overrides": {
        "Aura Dark": {
            "text": "#dce0e5ff",
            "text.muted": "#a9afbcff",
            "text.placeholder": "#878a98ff",
            "text.disabled": "#878a98ff",
            "text.accent": "#74ade8ff",
            "background": "#15141b95",
            "status_bar.background": "#15141b95",
            "editor.background": "#15141b30",
            "surface.background": "#15141b10",
            "panel.background": "#15141b00",
            "title_bar.background": "#15141b80",
            "tab_bar.background": "#15141b00",
            "tab.active_background": "#15141b50",
            "tab.inactive_background": "#15141b00",
            "toolbar.background": "#15141b00",
            "terminal.background": "#15141b90",
            "editor.gutter.background": "#15141b00",
            "scrollbar.track.background": "#15141b00",
            "border": "#adadad30",
            "border.variant": "#adadad30",
            "border.focused": "#a277ff90",
            "pane.focused_border": "#a277ff90",
            "panel.focused_border": "#a277ff90",
            "scrollbar.thumb.border": "#ffffff44",
            "scrollbar.track.border": "#ffffff55",
        },
    },
    "drag_and_drop_selection": {
        "enabled": false,
    },
    "show_whitespaces": "none",
    "autoscroll_on_clicks": true,
    "auto_signature_help": true,
    "seed_search_query_from_cursor": "never",
    "base_keymap": "VSCode",
    "buffer_line_height": "comfortable",
    "current_line_highlight": "none",
    "minimap": { "show": "never" },
    "status_bar": {
        "active_language_button": true,
        "cursor_position_button": true,
        "line_endings_button": false,
        "active_encoding_button": "enabled",
        "experimental.show": true,
    },
    "indent_guides": {
        "active_line_width": 0,
        "enabled": false,
        "coloring": "fixed",
        "line_width": 1,
        "background_coloring": "disabled",
    },
    "project_panel": {
        "dock": "left",
        "default_width": 250,
        "hide_root": true,
        "auto_fold_dirs": false,
        "sticky_scroll": false,
        "scrollbar": {
            "show": "never",
        },
        "indent_guides": {
            "show": "never",
        },
    },
    "outline_panel": {
        "default_width": 300,
        "indent_guides": {
            "show": "never",
        },
    },
    "file_finder": {
        "modal_max_width": "large",
    },
    "scrollbar": {
        "show": "never",
    },
    "tab_size": 4,
    "scroll_beyond_last_line": "vertical_scroll_margin",
    "terminal": {
        "working_directory": "current_project_directory",
    },
    "gutter": {
        "min_line_number_digits": 0,
        "folds": false,
        "runnables": false,
    },
    "agent_ui_font_size": 18,
    "agent_buffer_font_size": 15,
    "profiles": {},
    "lsp": {
        "tailwindcss-language-server": {
            "settings": {
                "tailwindCSS": {
                    "emmetCompletions": true,
                },
                "classFunctions": ["cva", "cx"],
                "experimental": {
                    "classRegex": [
                        "[cls|className]\\s\\:\\=\\s\"([^\"]*)",
                        "class=\"([^\"]*)\"",
                        "class='([^']*)'",
                        "class:list=\"{([^}]*)}\"",
                        "class:list='{([^}]*)}'",
                        [
                            "@apply\\s+([^;\\n]+)",
                            "\\b([a-z-]+(?:-[a-z-]+)*)\\b",
                        ],
                        "class\\s*=\\s*\"([^\"]*)\"",
                        "clx\\s*=\\s*\"([^\"]*)\"",
                        "class\\s*=\\s*'([^']*)'",
                        ["html`([^`]*)`", "class\\s*=\\s*\"([^\"]*)\""],
                        ["html`([^`]*)`", "class\\s*=\\s*'([^']*)'"],
                        [
                            "innerHTML\\s*=\\s*`([^`]*)`",
                            "class\\s*=\\s*\"([^\"]*)\"",
                        ],
                        ["clx\\s*\\(\\s*\\{([^}]*)\\}\\s*\\)"],
                        ["cn\\s*\\(\\s*\\{([^}]*)\\}\\s*\\)"],
                    ],
                },
            },
        },
    },
    "languages": {
        "TypeScript": {
            "formatter": {
                "external": {
                    "command": "./node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"],
                },
            },
            "language_servers": [
                "eslint",
                "typescript-language-server",
                "tailwindcss-language-server",
            ],
        },
        "TSX": {
            "formatter": {
                "external": {
                    "command": "./node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"],
                },
            },
            "language_servers": [
                "eslint",
                "typescript-language-server",
                "tailwindcss-language-server",
            ],
        },
        "JavaScript": {
            "formatter": {
                "external": {
                    "command": "./node_modules/.bin/prettier",
                    "arguments": ["--stdin-filepath", "{buffer_path}"],
                },
            },
            "language_servers": [
                "eslint",
                "javascript-language-server",
                "tailwindcss-language-server",
            ],
        },
        "HTML": {
            "formatter": "language_server",
        },
    },
}
